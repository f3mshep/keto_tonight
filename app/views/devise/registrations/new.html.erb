<br>
<div class="container">
  <div class="row justify-content-center vertical-tweak">
    <div class="col-md-6 content-box my-auto">
      <h2 style="text-align: center;">Sign up</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <br>
        <div class="field row justify-content-center">
        <div class="col-8">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
          <div class="field">
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, placeholder: "Password (6 characters minimum)", autocomplete: "off", class: "form-control" %>
          </div>
          <br>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" %>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
          </div>
          <% end %>
          <div style= "text-align: center;">
            <%= render "devise/shared/links" %>
          </div>
        </div>
        </div>
    </div>
  </div>
</div>
