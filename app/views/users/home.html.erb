<div class="jumbotron">
    <div class="row justify-content-center">
        <div class="col-md-6" style="text-align: center">
            <h1>Find a Recipe</h1>
            <br>
            <%= form_tag(recipes_path, method: :get, class: 'form-inline justify-content-center')  do %>
                <%= text_field_tag :search_query, "", class: "form-control input-lg", placeholder: "What do you want to cook tonight?" %>
                <br>
                <%= submit_tag 'Search', class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12"><h2>Dinner</h2></div class="col-md-12">
                <%= render partial: "recipes/recipe", collection: top_recipes("Dinner") %>
            </div>
            <div class="row">
                <div class="col-md-12"><h2>Lunch</h2></div>
                <br>
                <%= render partial: "recipes/recipe", collection: top_recipes("Lunch") %>
            </div>
            <div class="row">
                <div class="col-md-12"><h2>Breakfast</h2></div>
                <br>
                <%= render partial: "recipes/recipe", collection: top_recipes("Breakfast") %>
            </div>
            <div class="row">
                <h2>Dessert</h2>
                <br>
                <%= render partial: "recipes/recipe", collection: top_recipes("Dessert") %>
            </div>
        </div>
    </div>
</div>
