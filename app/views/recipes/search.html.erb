<br>

<div class="container">
    <div class="row justify-content-center content-box">
    <div class="col-md-8">
        <h2>Advanced Search</h2>
        <br>
        <%= form_tag(recipes_path, method: :get) do %>
        <div class="row">
          <div class="col-8">
            <%= text_field_tag :search_query, "", class: "form-control", placeholder: "Recipe Name" %>
          </div>
          <div class="col-4">
               <%= check_box_tag("is_liked", true, false, class:"checkbox-inline")  %>
              <%=h 'Display only liked recipes' %>
          </div>
        </div>
        <br>
          <%= label_tag "Order by:"%>
          <br>
          <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary"><%= radio_button_tag :order, "by_likes" %> Likes</label>
            <label class="btn btn-primary"><%= radio_button_tag :order, "most_recent" %> Most recent</label>
          </div>
          <br>
          <%= label_tag "Choose Recipe Categories:"%>
          <br>
          <div class="btn-group" data-toggle="buttons">
            <% Category.all.each do |category| %>
              <!-- using names instead of ids is desired for better URL clarity -->
              <br>
                <label class='btn btn-primary'>
                  <%= check_box_tag("by_categories[]", category.name, false, class:"checkbox")  %> <%=category.name%>
                </label>
            <% end %>
            <br>
          </div>
          <p>&nbsp</p>
          <div class=><%= submit_tag 'Search', class: "btn btn-primary" %></div class="row">
        <% end %>
    </div>
    
    </div>
  </div>
</div>
