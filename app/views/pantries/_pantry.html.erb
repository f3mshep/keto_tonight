<div class="container">
  <%if @pantry.ingredients.empty?%>
  <p>There are no ingredients in your pantry!</p>
  <%end%>
  <%@pantry.pantry_ingredients.each do |pantry_ingredient|%>
    <div class="row">
      <div class="col-10">
        <%= link_to pantry_ingredient.ingredient, class: "no-color" do %>
          <h4><%= pantry_ingredient.ingredient_name.capitalize%></h4>
        <% end %> 
      </div>
      <div class="col-2">
        <%= button_to "Remove from pantry", pantry_ingredient, method: :delete, class: 'btn btn-secondary btn-sm' %>
      </div>
    </div>
      <hr>
  <%end%>
</div>